{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-debugger": false,
    "no-console": false,
    "no-empty": false,
    "no-empty-interface": false,
    "no-bitwise": false,
    "comment-format": false,
    "variable-name": false,
    "member-ordering": [
      false
    ],
    // class name一定得是Pascal的, 有_也不行
    "class-name": false,
    // 给filed, function都要加public/private...
    "member-access": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
